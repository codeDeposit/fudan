<%@ page contentType="text/html;charset=UTF-8"%>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/functions" prefix="fn"%>
<!-- table start-->
<table class="table table-striped table-bordered table-hover">
	<thead class="headBg">
		<tr>
			<th>序号</th>
			<th>所属新闻</th>
			<th>评论内容</th>
			<th>评论时间</th>
			<th>评论人</th>
			<th>操作</th>
		</tr>
	</thead>
	<tbody>
		<c:choose>
			<c:when
				test="${newsComments != null and fn:length(newsComments) != 0}">
				<c:forEach var="newsComment" items="${newsComments}"
					varStatus="index">
					<tr class="gradX">
						<td>${index.count}</td>
						<td>${newsComment.news.subject}</td>
						<td>${newsComment.content}</td>
						<td>${newsComment.createtime}</td>
						<td>${newsComment.fullname}</td>
						<td class="center">
							<button class="btn btn-danger btn-xs"
								onclick="fuConfirm('${newsComment.commentId}')"
								data-toggle="modal" data-target="#toast">
								<i class="glyphicon glyphicon-trash"></i> 删除
							</button></td>
					</tr>
				</c:forEach>
			</c:when>
			<c:otherwise>
				<tr class="gradX">
					<td colspan="6">没有数据</td>
				</tr>
			</c:otherwise>
		</c:choose>
	</tbody>
</table>
<!-- table end -->


<!-- 分页 start -->
<div align="right">
	<a href="#" onclick="pageturn(1)">首页</a>
	<c:if test="${pageNos > 1}">
		<a href="#" onclick="pageturn(${pageNos - 1})">上一页</a>
	</c:if>
	<c:if test="${pageNos < pageCount}">
		<a href="#" onclick="pageturn(${pageNos + 1})">下一页</a>
	</c:if>
	<a href="#" onclick="pageturn(${pageCount})">末页</a>
</div>
<div align="right">
	<form id="newspageturnform">
		<h4>
			<span> 共${pageCount}页 <input id="zhuandao" type="text"
				value="${pageNos}" name="pageNos" size="1">页 <input
				onclick="pageturn(0)" type="button" value="转到"> </span>
		</h4>
	</form>
</div>
<!-- 分页 end -->