<%@ page contentType="text/html;charset=UTF-8"%>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/functions" prefix="fn"%>
<!-- table start-->
<table class="table table-striped table-bordered table-hover">
	<thead class="headBg">
		<tr>
			<th>序号</th>
			<th>发布者</th>
			<th>公告标题</th>
			<th>生效日期</th>
			<th>失效日期</th>
			<th>状态</th>
			<th>操作</th>
		</tr>
	</thead>
	<tbody>
		<c:choose>
			<c:when test="${notices != null and fn:length(notices) != 0}">
				<c:forEach var="notice" items="${notices}" varStatus="index">
					<tr class="gradX">
						<td>${index.count}</td>
						<td>${notice.postName}</td>
						<td><a href="#home"
							onclick="openForm('${notice.noticeId}','info')"
							data-toggle="modal" data-target="#noticeinfoorupdate">${notice.noticeTitle}</a>
						</td>
						<td>${notice.effectiveDate1}</td>
						<td>${notice.expirationDate1}</td>
						<c:if test="${notice.state == 1}">
							<td>正式发布</td>
						</c:if>
						<c:if test="${notice.state == 0}">
							<td>草稿</td>
						</c:if>
						<td class="center"><c:if test="${notice.state == 0}">
								<button class="btn btn-info btn-xs"
									onclick="issue('${notice.noticeId}')">
									<i class="glyphicon glyphicon-ok"></i> 发布
								</button>
							</c:if>
							<button type="button" class="btn btn-warning btn-xs"
								onclick="openForm('${notice.noticeId}','update')"
								data-toggle="modal" data-target="#noticeinfoorupdate">
								<i class="glyphicon glyphicon-pencil"></i>&nbsp;修改
							</button>
							<button class="btn btn-danger btn-xs"
								onclick="fuConfirm('${notice.noticeId}')">
								<i class="glyphicon glyphicon-trash"></i> 删除
							</button>
						</td>
					</tr>
				</c:forEach>
			</c:when>
			<c:otherwise>
				<tr class="gradX">
					<td colspan="7">没有数据</td>
				</tr>
			</c:otherwise>
		</c:choose>
	</tbody>
</table>
<!-- table end -->
<!-- 分页 start -->
<div align="right">
	<a href="javascript:void(0)" onclick="pageturn(1)">首页</a>
	<c:if test="${pageNos > 1}">
		<a href="javascript:void(0)" onclick="pageturn(${pageNos - 1})">上一页</a>
	</c:if>
	<c:if test="${pageNos < pageCount}">
		<a href="javascript:void(0)" onclick="pageturn(${pageNos + 1})">下一页</a>
	</c:if>
	<a href="javascript:void(0)" onclick="pageturn(${pageCount})">末页</a>
</div>
<div align="right">
	<form id="newspageturnform">
		<h4>
			<span> 共${pageCount}页 <input id="zhuandao" type="text"
				value="${pageNos}" name="pageNos" size="1">页 <input
				onclick="pageturn(0)" type="button" value="转到"> </span>
		</h4>
	</form>
</div>
<!-- 分页 end -->