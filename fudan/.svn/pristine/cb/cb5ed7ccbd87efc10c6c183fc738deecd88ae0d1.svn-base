	    forceParse: 0,
	}); 
	$.ajax({//类别调取
		type:"post",
		async:false,
		url:basePath+"backstage/wzcg/kind/list",
		success:function(data){
			$('#category1').html(data);
		}
	}); 
	$.ajax({//单位调取
		type:"post",
