function fItemList(param,param2) {
	fuLoading();
	if(param != '' && param != undefined && param != null){
		_id = param;
	}
	$.ajax({
		type:"post",
		async:false,
		url:basePath+"backstage/wzcg/item/list",
		data:{
			projectId: _id,
			state:param2,
			mark:'xqyt'
		},
		success:function(data){
			$('#itemList').html(data); 
			$('#mItemList').modal('show');	
			fuCloseLayer();
		}
	});
}
function fItemDelete(param,param2){
	var amounts = document.getElementsByName('xqAmount');//得到总价
	var amountStr = 0;
	for(var i=0;i<amounts.length;i++){
		amountStr += parseInt(amounts[i].innerText);
	}
 	$.ajax({
		type:"post",
		async:false,
		url:basePath+"backstage/wzcg/item/delete?mark=xqyt",
		data:{id:param,amountStr:(amountStr - param2)},
		success:function(data){
			var obj = eval('('+ data +')');
			if(obj.res == 0){
				alert(obj.resMsg);
			}else{
				fuCloseLayer();
				fItemList();
			}
		}
	}); 
	return false;
}
function fItemAdd(){
	fuLoading();
	setTimeout("fItemAdd2();",200);
	return false;
}
function fItemAdd2(){	
	document.getElementById('projectId').value = _id;
	var ids = ['filePicture'];
	var amount = document.getElementById('amount').value;
	var amounts = document.getElementsByName('xqAmount');//得到总价
	var amountStr = 0;
	for(var i=0;i<amounts.length;i++){
		amountStr = parseInt(amounts[i].innerText) + amountStr;
	}	
	amountStr = amountStr + parseInt(amount);
	$.ajaxFileUpload({
		type:"post",
		async:false,
		url:basePath+"backstage/wzcg/item/add?"+$("#xqItemAddForm").serialize()+"&amountStr="+amountStr+"&mark=xqyt",
		ecureuri:false,
    	fileElementId:ids,
		dataType:"JSON",	
		success:function(data){
			$('#mItemAdd').modal('hide');
			document.getElementById("xqItemAddForm").reset();
			fuCloseLayer();
			fItemList();
		}
	});
}
