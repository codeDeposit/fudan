            $("#poSition").attr("title", "");
            var orgId = $("#depId").val();
            getJobByOrg(orgId);
        }else{
             $("#poSition").val("");
             $("#poSition").attr("disabled", "disabled");
             $("#poSition").attr("title", "请先选择所属部门或公司！");
        }
    }
  	
