<%@ page contentType="text/html;charset=UTF-8"%>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core"%>
<%@ taglib prefix="fmt" uri="http://java.sun.com/jsp/jstl/fmt"%>
<!-- 添加 start-->
<button type="button" class="btn btn-success pull-right"
	data-toggle="modal" data-target="#addModal" style="margin:10px;">
	<i class="glyphicon glyphicon-plus"></i>&nbsp;添加
</button>
<!-- 添加 end -->

<!-- 模拟态窗口 start-->
<div class="modal fade" id="addModal" tabindex="-1" role="dialog"
	aria-labelledby="myModalLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal"
					aria-hidden="true">×</button>
				<h4 class="modal-title" id="myModalLabel">新闻类型添加</h4>
			</div>
			<div class="modal-body">
				<form id="addform" class="form-horizontal aForm" role="form">
					<div class="form-group">
						<label class="col-sm-2 control-label">类型名称</label>
						<div class="col-sm-10">
							<input type="text" class="form-control" name="typeName"
								placeholder="公文类型名称">
						</div>
					</div>
					<div class="modal-footer">
						<button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
						<button id="submitbtn" type="submit" class="btn btn-success">保存</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
<!-- 模拟态窗口 end -->