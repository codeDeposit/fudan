<%@ page contentType="text/html;charset=UTF-8" %>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core"%>
<%@ taglib prefix="fmt" uri="http://java.sun.com/jsp/jstl/fmt"%>
<div class="modal fade" id="Modal_unit_add" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header headBg">
				<button type="button" class="close" data-dismiss="modal" aria-hidden="true">
					×
				</button>
				<h4 class="modal-title text-center" id="myModalLabel">单位添加</h4>
			</div>
			<div class="modal-body">
				<form class="form-horizontal aForm" role="form" id="Form_unit_add" onsubmit="return fAdd()">
					<input type="hidden" value="1" name="isValid" id="isValid">
					<div class="form-group">
						<label class="col-sm-2 control-label">单位名称</label>
						<div class="col-sm-10">
							<input type="text" class="form-control" id="unit_add_name" name="name" maxlength="255" placeholder="单位名称" required>
						</div>
					</div> 
					<div class="modal-footer">
						<button type="button" class="btn btn-default" data-dismiss="modal">
							关闭
						</button>
						<button type="submit" class="btn btn-success">
							保存
						</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>