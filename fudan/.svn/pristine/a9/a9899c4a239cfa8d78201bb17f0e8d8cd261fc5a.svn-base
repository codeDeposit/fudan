<%@ page contentType="text/html;charset=UTF-8"%>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/functions" prefix="fn"%>
<!-- 查询 start-->
<form id="newssearchform" role="form" class="form-horizontal">
	<div class="form-group col-md-4">
		<label for="newsTypeSelect" class="control-label col-md-4 text-center">新闻类别</label>
		<div class="col-md-8">
			<select id="newsTypeSelect" class="form-control" name="typeId">
				<option selected value="">--请选择--</option>
			</select>
		</div>
	</div>
	<div class="form-group col-md-4">
		<label for="newstitlesearch" class="control-label col-md-4 text-center">新闻标题</label>
		<div class="col-md-8">
			<input type="text" id="newstitlesearch" class="form-control" name="subject">
		</div>
	</div>
	<div class="form-group col-md-3">
		<label for="newsauthorsearch" class="control-label col-md-4 text-center">作者</label>
		<div class="col-md-8">
			<input type="text" id="newsauthorsearch" class="form-control" name="author">
		</div>
	</div>
	<input type="hidden" id="operationId" name="operation"
		value="partrefresh">
	<div class="form-group col-md-1">
		<button id="newssearchbtn" class="btn btn-success btn-sm" type="button">
			<i class="glyphicon glyphicon-search"></i>
		</button>
	</div>
</form>
<!-- 查询 end-->