<%@ page contentType="text/html;charset=UTF-8" %>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core"%>
<%@ taglib prefix="fmt" uri="http://java.sun.com/jsp/jstl/fmt"%>
<!DOCTYPE HTML>
<html>
	<head>
		<%@ include file="../common/styleUrl.jsp" %>
		<meta charset="utf-8">
		<meta name="viewport" content="maximum-scale=1.0,minimum-scale=1.0,user-scalable=0,width=device-width,initial-scale=1.0" />
		<meta name="format-detection" content="telephone=no,email=no,date=no,address=no">
		<link rel="stylesheet" type="text/css" href="${jypath}/mobile/css/common/aui2/aui.css" />
		<script type="text/javascript" src="${jypath}/mobile/js/jquery/jquery-2.1.1.min.js"></script>
		<script type="text/javascript" src="${jypath}/mobile/js/toast/toast.js"></script>
		<script type="text/javascript" src="${jypath}/mobile/js/customer/customer.js"></script>
		<title>客户添加</title>
	</head>
	<body>
		<header class="aui-bar aui-bar-nav" id="header">
			<a class="aui-btn aui-pull-left" tapmode href="index"> <span class="aui-iconfont aui-icon-left">返回</span> </a>
			<div class="aui-title" >
				客户添加
			</div>
		</header>
		<form id="FCustomerAdd" onsubmit="return fAdd()" >
			<div class="aui-content aui-margin-b-15">
			    <ul class="aui-list aui-form-list">
			        <li class="aui-list-item">
			            <div class="aui-list-item-inner">
			                <div class="aui-list-item-label">
			                  	企业名称
			                </div>
			                <div class="aui-list-item-input">
			                    <input type="text" name="company" id="company" maxlength="255" placeholder="企业名称" required>
			                </div>
			            </div>
			        </li> 
			        <li class="aui-list-item">
			            <div class="aui-list-item-inner">
			                <div class="aui-list-item-label">
			                  	负 &nbsp;责&nbsp;人
			                </div>
			                <div class="aui-list-item-input">
			                    <input type="text" name="responsible" id="responsible" maxlength="255" placeholder="负责人" required>
			                </div>
			            </div>
			        </li> 
			        <li class="aui-list-item">
			            <div class="aui-list-item-inner">
			                <div class="aui-list-item-label">
			                  	企业地址
			                </div>
			                <div class="aui-list-item-input">
			                    <input type="text" name="address" id="address" maxlength="255" placeholder="企业地址" required>
			                </div>
			            </div>
			        </li> 
			        <li class="aui-list-item">
			            <div class="aui-list-item-inner">
			                <div class="aui-list-item-label">
			                  	备&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;注
			                </div>
			                <div class="aui-list-item-input">
			                    <input type="text" name="remark" id="remark" maxlength="255" placeholder="备注" required>
			                </div>
			            </div>
			        </li> 
			   	</ul>
		    </div>
		   	<div class="aui-content-padded">
	        	<p><button class="aui-btn aui-btn-success aui-btn-block aui-btn-sm">提	交</button></p>
		   	</div>
		</form>
	</body>
</html>