@CHARSET "UTF-8";
html,body{margin:0 auto;font-family:Arial,'微软雅黑','黑体',sans-serif;width:1366px;background-color:#fff;}
a{text-decoration:none;}
#modify_nav{width:100%;height:100px;text-align:center;position:relative;z-index:999;line-height:100px;font-size:32px;letter-spacing:2px;color:#3676a1 }
#modify_nav img{height:90px;margin-top:24px;}
#modify_content{height:72%;background-image:url("../../images/login/bg.png");background-size:cover;position:relative;top:1.2em}
#modify_content .modify_box{width:280px;height:280px;background-color:#fff;border-radius:4%;position:absolute;top:51px;right:84px;}
#modify_content .modify_box .modify_title{height:23px;text-align:center;font-size:24px;line-height:50px;color:#8f8f94;}
#modify_content .modify_box .modify_input{width:85%;border-radius:4%;border:1px solid #d1d1d1;margin:0 auto;height:80px;text-align:center;font-size:14px;line-height:50px;color:#000;}
#modify_content .modify_box .modify_input i{width:6%;float:left;height:40px;line-height:40px;color:#8f8f94;margin-left:4%;}
#modify_content .modify_box .modify_input input{float:left;text-indent:1em;font-size:14px;width:90%;background-color:transparent;border:0px;height:40px;}
#modify_content .modify_box .modify_button{width:80%;height:50px;margin:0 auto;font-size:20px;text-align:center;line-height:50px;color:#fff;background-color:#2ecc71;border-radius:6px;margin-top:63px;}
#modify_content .modify_box .modify_button:active{background-color:#a5d16d;}
#modify_content .modify_box .templet1_register{width:100%;height:40px;line-height:40px;}
#modify_content .modify_box .templet1_register .modify_item{width:50%;float:left;height:40px;line-height:40px;text-align:center;font-size:12px;color:#8f8f8f;}
#modify_content .modify_box .templet1_register .modify_item2{width:100%;height:20px;line-height:20px;text-decoration:underline;text-align:center;font-size:12px;color:#8f8f8f;}
#modify_content .modify_box .templet2_register{width:100%;height:60px;line-height:60px;}
#modify_content .modify_box .templet2_register .modify_item{width:50%;float:right;height:60px;line-height:60px;text-align:center;font-size:12px;color:#8f8f8f;}
#modify_content .modify_box .templet2_register .modify_item2{text-decoration:underline;}
#modify_footer{height:20px;width:1366px;text-align:center;position:fixed;bottom:18px;font-size:12px;color:#373c44;letter-spacing:2px;}
#modify_footer img{height:12px;}
#mobile_input{display:none;}
#button2{display:none;}
#button3{display:none;}
#line{width:90%;float:left;margin:0 auto;height:1px; background-color:#d1d1d1;margin-left:5%;}
.pc_code{border:1px solid #d1d1d1 !important;width:60% !important;margin-top:10px !important;border-radius:6px !important;}
.pc_code_img{cursor:pointer;height:30px;margin-top:13px;width:60px;}
