#fileArea{width:100%;margin: 0 auto;height:auto;border:1px dotted #8f8f94;border-radius: 12px;text-align:center;}
#fileArea #slogan{font-size:16px;text-align:center;color:#8f8f94;width:100%;height:220px;line-height:220px;}
#fileArea #Box{width:100%;height:auto;overflow: hidden;padding-top: 20px;}
#fileArea #Box .imgBox{width:24%;height:200px;border-right:2px dotted #F4F4F4;float:left;margin-bottom: 20px;position:relative;}
#fileArea #Box .imgBox img{width:70%;height:200px;border-radius: 18px;padding: 4px;border: 2px solid #F4F4F4;}
#fileArea #Box .imgBox .imgDelete{position:absolute;right:57px;bottom:15px;}
#fileArea #Box .imgBox .imgDelete a{text-decoration:none;}
#fileArea #Box .imgBox .imgDelete .span0{padding:4px;font-size:10px;background-color:#ff6364;border:1px dotted #8f8f94;color:#fff;border-radius:4px;display:block;}
#fileArea #Box .imgBox .imgDelete .span0:hover{background-color: #F86B4F;}
#fileArea .fileButton{width: 100%;height:56px;line-height:56px;text-align:center;border-top:1px dotted #8f8f94;position:relative;background-color:#EEE;border-radius:12px;}
#fileArea .fileButton .hintWord{width: 37%;position:absolute;top:2px;left:2px;letter-spacing:3px;color:#ff6364;font-size:12px;height:52px;line-height:52px;}
#fileArea .fileButton .span1{padding:8px 17px;background-color: #1ab394;margin:0 4px;font-size:12px;color:#fff;border-radius:6px;}
#fileArea .fileButton .span2{padding:8px 20px;background-color: #2ecc71;margin:0 4px;font-size:12px;color:#fff;border-radius:6px;}
#fileArea .fileButton a{text-decoration:none;}
#fileArea .fileButton .span1:hover{background-color:#15bc75;}
#fileArea .fileButton .span2:hover{background-color:#a5d16d;}
@media screen and (max-width:1200px){
	#fileArea{width:96%;margin: 0 auto;height:auto;border:1px dotted #8f8f94;border-radius: 12px;text-align:center;}
	#fileArea .fileButton{width: 100%;height:56px;line-height:56px;text-align:center;border-top:1px dotted #8f8f94;position:relative;}
	#fileArea .fileButton .hintWord{width:100%;position:absolute;top:-48px;left:12px;letter-spacing:3px;color:#ff6364;font-size:12px;height:52px;line-height:52px;}
	#fileArea #Box .imgBox img{width:94%;height:200px;border-radius: 18px;padding: 4px;border: 2px solid #F4F4F4;}
}