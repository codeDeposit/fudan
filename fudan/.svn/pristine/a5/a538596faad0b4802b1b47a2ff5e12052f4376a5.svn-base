<%@ page contentType="text/html;charset=UTF-8" %>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/functions" prefix="fn"%>
<!DOCTYPE html>
<html>
	<head>
		<%@ include file="../../common/styleUrl.jsp" %>
		<%@ include file="../../common/toast.jsp" %>
		<base href="<%=basePath%>">
		<link rel="stylesheet" href="pc/css/bootstrap/bootstrap.min.css">
		<link rel="stylesheet" href="pc/css/font/font-awesome.css">
		<link rel="stylesheet" href="pc/css/common/style.min.css">
		<script src="pc/js/jquery/jquery-2.1.1.min.js"></script>
		<script src="pc/js/bootstrap/bootstrap.min.js"></script>
		<link href="pc/css/date/bootstrap-datetimepicker.min.css" rel="stylesheet" media="screen">
		<script type="text/javascript" src="pc/js/date/bootstrap-datetimepicker.min.js" charset="UTF-8"></script><!-- 新增 日期选择-->
		<script type="text/javascript" src="pc/js/date/bootstrap-datetimepicker.zh-CN.js" charset="UTF-8"></script><!-- 新增  语言-->
		<style>
			.SearchForm .forinBlo{display: inline-block;width: 66.66%;}
			.labelPad{padding-top: 7px;}
		</style>
		<!-- 局部刷新 js -->
		<script src="pc/js/oa/refresh.js"></script>
		<script src="pc/js/oa/partrefresh.js"></script>
		<script src="pc/js/oa/pageturning.js"></script>
	</head>
	<body>
    	<!-- padding盒子 start-->
    	<div>
	    	<%@ include file="diary_search.jsp" %>
	    	<%@ include file="diary_add.jsp" %>
	        
			<div id="diarytable">	        
		        <!-- table start-->
		        <table class="table table-striped table-bordered table-hover">
		            <thead class="headBg">
		                <tr>
							<th>序号</th>
							<th>日期</th>
							<th>日志类型</th>
							<th>操作</th>
						</tr>
		            </thead>
		            <tbody>
						<c:choose>
						<c:when test="${diarys != null and fn:length(diarys) != 0}">
						<c:forEach var="diary" items="${diarys}" varStatus="index">
						<tr class="gradX">
							<td>${index.count}</td>
							<td>${diary.dayTime1}</td>
							<c:if test="${diary.diaryType == 0}">
							<td>个人日志</td>
							</c:if>
							<c:if test="${diary.diaryType == 1}">
							<td>工作日志</td>
							</c:if>
							<td class="center">
								<button type="button" class="btn btn-info btn-xs" onclick="openForm('${diary.diaryId}','info')" data-toggle="modal" data-target="#getInfoOrUpdate">
									<i class="glyphicon glyphicon-pencil"></i>&nbsp;详情
								</button>
								<button type="button" class="btn btn-warning btn-xs" onclick="openForm('${diary.diaryId}','update')" data-toggle="modal" data-target="#getInfoOrUpdate">
									<i class="glyphicon glyphicon-pencil"></i>&nbsp;修改
								</button>
								<button class="btn btn-danger btn-xs" onclick="fuConfirm('${diary.diaryId}')">
									<i class="glyphicon glyphicon-trash"></i> 删除
								</button>
							</td>
						</tr>
						</c:forEach>
						</c:when>
						<c:otherwise>
							<tr class="gradX"><td colspan="4">没有数据</td></tr>
						</c:otherwise>
					</c:choose>
		            </tbody>
		        </table>
	        <!-- table end -->
	        
			<!-- 分页 start -->
			<div align="right">
				<a href="javascript:void(0);" onclick="pageturn(1)">首页</a>
				<c:if test="${pageNos > 1}">
					<a href="javascript:void(0);" onclick="pageturn(${pageNos - 1})">上一页</a>
				</c:if>
				<c:if test="${pageNos < pageCount}">
					<a href="javascript:void(0);" onclick="pageturn(${pageNos + 1})">下一页</a>
				</c:if>
				<a href="javascript:void(0);" onclick="pageturn(${pageCount})">末页</a>
			</div>
			<div align="right">
				<form>
					<h4>
						<span> 
						共${pageCount}页 <input id="zhuandao" type="text" value="${pageNos}" name="pageNos" size="1">页 <input onclick="pageturn(0)" type="button" value="转到">
						</span>
					</h4>
				</form>
			</div>
	   		<!-- 分页 end -->
	   		</div>
	   	</div>
	   	<!-- padding盒子 end -->
	   	
	   	<!-- 修改、查看详细信息模态框 -->
	    <div id="getInfoOrUpdate"></div>
	</body>
	<script type="text/javascript" src="pc/js/oa/task/diary_list.js"></script>
</html>