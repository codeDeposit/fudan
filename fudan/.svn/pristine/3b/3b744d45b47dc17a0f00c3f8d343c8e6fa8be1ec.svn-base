<%@ page contentType="text/html;charset=UTF-8" %>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core"%>
<%@ taglib prefix="fmt" uri="http://java.sun.com/jsp/jstl/fmt"%>
<div class="modal fade" id="Modal_customer_add" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header headBg">
				<button type="button" class="close" data-dismiss="modal" aria-hidden="true">
					×
				</button>
				<h4 class="modal-title text-center" id="myModalLabel">客户添加</h4>
			</div>
			<div class="modal-body">
				<form class="form-horizontal aForm" role="form" id="Form_customer_add" onsubmit="return fAdd()">
					<div class="form-group">
						<label class="col-sm-2 control-label">企业名称</label>
						<div class="col-sm-10">
							<input type="text" class="form-control" id="company" name="company" maxlength="255" placeholder="企业名称" required>
						</div>
					</div>
					<div class="form-group">
						<label class="col-sm-2 control-label">负&nbsp;&nbsp;责&nbsp;&nbsp;人</label>
						<div class="col-sm-10">
							<input type="text" class="form-control" id="responsible" name="responsible" maxlength="255" placeholder="负责人" required>
						</div>
					</div>
					<div class="form-group">
						<label class="col-sm-2 control-label">企业地址</label>
						<div class="col-sm-10">
							<input type="text" class="form-control" id="address" name="address" maxlength="255" placeholder="企业地址" required>
						</div>
					</div> 
					<div class="form-group">
						<label class="col-sm-2 control-label">备&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;注</label>
						<div class="col-sm-10">
				            <textarea class="form-control" id="remark" name="remark" maxlength="255" placeholder="备注" required></textarea>
				       </div>
					</div>
					<div class="modal-footer">
						<button type="button" class="btn btn-default" data-dismiss="modal">
							关闭
						</button>
						<button type="submit" class="btn btn-success">
							保存
						</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>