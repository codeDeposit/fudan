<%@ page contentType="text/html;charset=UTF-8" %>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/functions" prefix="fn"%>
<!DOCTYPE html>
<html>
	<head>
		<%@ include file="../../common/styleUrl.jsp" %>
		<%@ include file="../../common/toast.jsp" %>
		<link rel="stylesheet" href="${jypath}/pc/css/bootstrap/bootstrap.min.css">
		<link rel="stylesheet" href="${jypath}/pc/css/font/font-awesome.css">
		<link rel="stylesheet" href="${jypath}/pc/css/common/style.min.css">
		<link rel="stylesheet" href="${jypath}/pc/css/date/bootstrap-datetimepicker.min.css" >
		<script src="${jypath}/pc/js/jquery/jquery-2.1.1.min.js"></script>
		<script src="${jypath}/pc/js/bootstrap/bootstrap.min.js"></script>
		<!-- 局部刷新 js -->
		<script src="${jypath}/pc/js/oa/refresh.js"></script>
		<script src="${jypath}/pc/js/oa/partrefresh.js"></script>
		<script src="${jypath}/pc/js/oa/pageturning.js"></script>
		<style>
			.SearchForm .forinBlo{display: inline-block;width: 66.66%;}
			.labelPad{padding-top: 7px;}
		</style>
	</head>
	<body>
		<!-- padding盒子 start-->
    	<div>
    	
    	<!-- 查询 start-->
    	<form id="booktypesearchform" class="SearchForm">
		    <div class="form-group col-md-2 col-sm-2">
		        <input type="text" placeholder="类别名称" class="form-control forinBlo" style="width:100%;" name="typeName">
		    </div>
		    <div class="form-group col-md-4 col-sm-4">
                <label class="col-sm-4 control-label labelPad">折旧方法</label>
                <div class="col-sm-8">
                    <select id="newsTypeSelect" class="form-control forinBlo" name="calMethod">
			              <option selected value="">--请选择--</option>
			              <option value="1">评价年限法</option>
			              <option value="2">工作量法</option>
			              <option value="3">双倍余额递减法</option>
			              <option value="4">年数总和法</option>
			        </select>
                </div>
            </div>
		    <input type="hidden" name="operation" value="partrefresh">
		    <button id="booktypesearchbtn" class="btn btn-success btn-sm" type="button"><i class="glyphicon glyphicon-search"></i></button>
		</form>
		<!-- 查询 end-->
    	
        <!-- 添加 start-->
        <button id="modaladdbtn" type="button" class="btn btn-success pull-right" data-toggle="modal" data-target="#booktypeAddModal" style="margin:10px;">
            <i class="glyphicon glyphicon-plus"></i>&nbsp;添加
        </button>
        <!-- 添加 end -->
        
        <!-- 模拟态窗口 start-->
        <div class="modal fade" id="booktypeAddModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                        <h4 class="modal-title" id="myModalLabel">折旧类别添加</h4>
                    </div>
                    <div class="modal-body">
                        <form id="booktypeaddform" class="form-horizontal aForm" role="form" >
                            <div class="form-group">
                                <label class="col-sm-2 control-label">类别名称</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" name="typeName">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">折旧周期(单位：月)</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" name="deprePeriod">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">折旧计算方法</label>
                                <div class="col-sm-10">
                                    <select id="newsTypeSelect" class="form-control forinBlo" name="calMethod">
							              <option selected value="">--请选择--</option>
							              <option value="1">评价年限法</option>
							              <option value="2">工作量法</option>
							              <option value="3">双倍余额递减法</option>
							              <option value="4">年数总和法</option>
							        </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">方法描述</label>
                                <div class="col-sm-10">
                                    <textarea rows="3" name="typeDesc" class="form-control"></textarea>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                                <button id="booktypeaddbtn" type="button" class="btn btn-success">保存</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- 模拟态窗口 end -->

		<div id="booktypetable">
        <!-- table start-->
        <table class="table table-striped table-bordered table-hover">
            <thead class="headBg">
                <tr>
					<th>序号</th>
	                <th>折旧类型</th>
	                <th>折旧周期(月)</th>
	                <th>折旧方法</th>
	                <th>方法描述</th>
	                <th>操作</th>
				</tr>
            </thead>
            <tbody>
            	<c:choose>
				<c:when test="${depreTypes != null and fn:length(depreTypes) != 0}">
	       		<c:forEach var="depreType" items="${depreTypes}" varStatus="index">
	           	<tr class="gradX">
	              	<td>${index.count}</td>
	              	<td>${depreType.typeName }</td>
	              	<td>${depreType.deprePeriod }</td>
	              	<c:if test="${depreType.calMethod == 1 }">
	              		<td>评价年限法</td>
		            </c:if>
		            <c:if test="${depreType.calMethod == 2 }">
	              		<td>工作量法</td>
		            </c:if>
		            <c:if test="${depreType.calMethod == 3 }">
	              		<td>双倍余额递减法</td>
		            </c:if>
		            <c:if test="${depreType.calMethod == 4 }">
	              		<td>年数总和法</td>
		            </c:if>
	              	<td>${depreType.typeDesc }</td>
					<td class="center">
						<button type="button" class="btn btn-warning btn-xs" onclick="openForm('${depreType.depreTypeId}', 'update')" data-toggle="modal" data-target="#booktypeInfoOrUpdate">
							<i class=" 	glyphicon glyphicon-pencil"></i>&nbsp;修改
						</button>
						<button class="btn btn-danger btn-xs" onclick="fuConfirm('${depreType.depreTypeId}')"><i class="glyphicon glyphicon-trash"></i> 删除</button>
					</td>
	           	</tr>
	           	</c:forEach>
	           	</c:when>
	           	<c:otherwise>
					<tr class="gradX"><td colspan="6">没有数据</td></tr>
				</c:otherwise>
	           	</c:choose>
            </tbody>
        </table>
        <!-- table end -->
        
        <!-- 分页 start -->
		<div align="right">
			<a href="#" onclick="pageturn(1)">首页</a>
			<c:if test="${pageNos > 1}">
				<a href="#" onclick="pageturn(${pageNos - 1})">上一页</a>
			</c:if>
			<c:if test="${pageNos < pageCount}">
				<a href="#" onclick="pageturn(${pageNos + 1})">下一页</a>
			</c:if>
			<a href="#" onclick="pageturn(${pageCount})">末页</a>
		</div>
		<div align="right">
			<form>
				<h4>
					<span> 共${pageCount}页 <input id="zhuandao" type="text" value="${pageNos}" name="pageNos" size="1">页 <input onclick="pageturn(0)" type="button" value="转到">
					</span>
				</h4>
			</form>
		</div>
		<!-- 分页 end -->
		</div>
    </div>
    <!-- padding盒子 end -->
    
    <!-- 修改、查看详细信息模态框 -->
    <div id="booktypeInfoOrUpdate"></div>
</body>
<script type="text/javascript">
   	// 添加折旧类型
   	$("#booktypeaddbtn").click(function() {
   		$.ajax({
			type: "post",
   			url:jypath + "/oa/depretype/add",
   			data: $("#booktypeaddform").serialize(),
   			success : function(html) {
   				$("#booktypeaddbtn").attr("data-dismiss", "modal");
   				fuShowSuccess();
   				refresh();
   			}
   		});
   	});
   	// 查看详细信息或修改
   	function openForm(id, operation) {
   		fuLoading();
		var url = "/oa/depretype/getdetails";
		$.ajax({
			type: "get",
   			url : jypath+url,
   			data: "depreTypeId="+id+"&operation="+operation,
   			success: function(data){
   				fuCloseLayer();
		    	$("#booktypeInfoOrUpdate").html(data);
		    }
   		});
   	}
   	//删除图书类别
   	function fDelete(typeId) {
		var url = "/oa/depretype/multidel";
		$.ajax({
			type: "get",
			url: jypath+url,
			data: {
				"depreTypeId" : typeId
			},
			success : function(html) {
				fuShowSuccess();
   				refresh();
   			}
		});
	}
	// 查询
	$("#booktypesearchbtn").click(function() {
		fuLoading();
		var id = "booktypetable";
		var url = jypath + "/oa/depretype/list";
		var type = "post";
		var data = $("#booktypesearchform").serialize();
		partRefresh(id, url, type, data);
	});
	// pageNos: 第几页
	function pageturn(pageNos) {
		fuLoading();
		if(pageNos == 0) {
			pageNos = $("#zhuandao").val();
		}
		var id = "booktypetable";
		var url= jypath+"/oa/depretype/list";
		var type = "get";
		var data = $("#booktypesearchform").serialize()+"&pageNos="+pageNos;
		pageturning(id, url, type, data);
	}
	function removeModal(id) {
		//删除模态窗口
		$("#"+id).html();
	}
	function fuSure(param){
		fuLoading();
		fuClose();
		setTimeout('fDelete(\''+param+'\')',200);
	}
</script>
</html>