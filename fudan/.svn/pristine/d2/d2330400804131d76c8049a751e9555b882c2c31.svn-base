<%@ page contentType="text/html;charset=UTF-8"%>
<!-- 查询 start-->
<form id="newssearchform" class="form" role="form">
	<div class="form-group col-md-2">
		<label class="control-label">紧急程度</label>
		<select class="form-control" name="urgent">
			<option selected value="">--请选择--</option>
			<option value="0">一般</option>
			<option value="1">重要</option>
			<option value="2">紧急</option>
		</select>
	</div>
	<div class="form-group col-md-2">
		<label class="control-label">开始时间</label>
		<input type="text" class="form-control tRequir" name="startTime" id="starT" readonly="readonly">
	</div>
	<div class="form-group col-md-2">
		<label class="control-label">结束时间</label>
		<input type="text" class="form-control tRequir" name="endTime" id="starT" readonly="readonly">
	</div>
	<div class="form-group col-md-2">
		<label class="control-label">内容</label>
		<input type="text" class="form-control" name="content">
	</div>
	<div class="form-group col-md-2">
		<label class="control-label">分配人</label>
		<input type="text" class="form-control" name="assignerName">
	</div>
	<div class="form-group col-md-2">
		<label class="control-label">状态</label>
		<select class="form-control" name="status">
			<option selected value="">--请选择--</option>
			<option value="0">未完成</option>
			<option value="1">完成</option>
		</select>
	</div>
	<input type="hidden" id="operationId" name="operation"
		value="partrefresh">
	<div class="form-group col-md-12">
		<button id="newssearchbtn" class="btn btn-success btn-sm" type="button">
			<i class="glyphicon glyphicon-search"></i>
		</button>
	</div>
</form>
<!-- 查询 end-->