<%@ page contentType="text/html;charset=UTF-8"%>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/functions" prefix="fn"%>

<!-- table start-->
<table class="table table-striped table-bordered table-hover">
	<thead>
		<tr>
			<th>序号</th>
			<th>状态</th>
			<th>开始时间</th>
			<th>结束时间</th>
			<th>紧急程度</th>
			<th>内容</th>
			<th>执行人</th>
			<th>分配人</th>
			<th>任务类型</th>
			<th>操作</th>
		</tr>
	</thead>
	<tbody>
		<c:choose>
			<c:when
				test="${calendarPlans != null and fn:length(calendarPlans) != 0}">
				<c:forEach var="calendarPlan" items="${calendarPlans}"
					varStatus="index">
					<tr class="gradX">
						<td>${index.count}</td>
						<c:if test="${calendarPlan.status == 1}">
							<td>完成</td>
						</c:if>
						<c:if test="${calendarPlan.status == 0}">
							<td>未完成</td>
						</c:if>
						<td>${calendarPlan.startTime1}</td>
						<td>${calendarPlan.endTime1}</td>
						<c:if test="${calendarPlan.urgent == 0}">
							<td>一般</td>
						</c:if>
						<c:if test="${calendarPlan.urgent == 1}">
							<td>重要</td>
						</c:if>
						<c:if test="${calendarPlan.urgent == 2}">
							<td>紧急</td>
						</c:if>
						<td>${calendarPlan.content}</td>
						<td>${calendarPlan.fullname}</td>
						<td>${calendarPlan.assignerName}</td>
						<c:if test="${calendarPlan.taskType == 1}">
							<td><font color="red">限期任务</font>
							</td>
						</c:if>
						<c:if test="${calendarPlan.taskType == 2}">
							<td><font color="blue">非限期任务</font>
							</td>
						</c:if>
						<c:if test="${calendarPlan.status == 0 }">
							<td class="center">
								<button class="btn btn-info btn-xs"
									onclick="openForm('${calendarPlan.planId}','complete')"
									data-toggle="modal" data-target="#newsInfoOrUpdate">
									<i class="glyphicon glyphicon-ok"></i> 完成
								</button>
								<button type="button" class="btn btn-warning btn-xs"
									onclick="openForm('${calendarPlan.planId}','update')"
									data-toggle="modal" data-target="#newsInfoOrUpdate">
									<i class="glyphicon glyphicon-pencil"></i>&nbsp;修改
								</button>
								<button class="btn btn-danger btn-xs"
									onclick="fuConfirm('${calendarPlan.planId}')">
									<i class="glyphicon glyphicon-trash"></i> 删除
								</button></td>
						</c:if>
						<c:if test="${calendarPlan.status == 1 }">
							<td class="center">
								<button class="btn btn-danger btn-xs"
									onclick="fuConfirm('${calendarPlan.planId}')">
									<i class="glyphicon glyphicon-trash"></i> 删除
								</button></td>
						</c:if>
					</tr>
				</c:forEach>
			</c:when>
			<c:otherwise>
				<tr class="gradX">
					<td colspan="10">没有数据</td>
				</tr>
			</c:otherwise>
		</c:choose>
	</tbody>
</table>
<!-- table end -->

<!-- 分页 start -->
<div align="right">
	<a href="#" onclick="pageturn(1)">首页</a>
	<c:if test="${pageNos > 1}">
		<a href="#" onclick="pageturn(${pageNos - 1})">上一页</a>
	</c:if>
	<c:if test="${pageNos < pageCount}">
		<a href="#" onclick="pageturn(${pageNos + 1})">下一页</a>
	</c:if>
	<a href="#" onclick="pageturn(${pageCount})">末页</a>
</div>
<div align="right">
	<form id="newspageturnform">
		<h4>
			<span> 共${pageCount}页 <input id="zhuandao" type="text"
				value="${pageNos}" name="pageNos" size="1">页 <input
				onclick="pageturn(0)" type="button" value="转到"> </span>
		</h4>
	</form>
</div>
<!-- 分页 end -->