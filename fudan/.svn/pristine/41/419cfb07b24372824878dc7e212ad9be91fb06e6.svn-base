<%@ page contentType="text/html;charset=UTF-8" %>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/functions" prefix="fn"%>
<!DOCTYPE html>
<html>
	<head>
		<%@ include file="../../common/styleUrl.jsp" %>
		<%@ include file="../../common/toast.jsp" %>
		<link rel="stylesheet" href="${jypath}/pc/css/bootstrap/bootstrap.min.css">
		<link rel="stylesheet" href="${jypath}/pc/css/font/font-awesome.css">
		<link rel="stylesheet" href="${jypath}/pc/css/common/style.min.css">
		<script src="${jypath}/pc/js/jquery/jquery-2.1.1.min.js"></script>
		<script src="${jypath}/pc/js/bootstrap/bootstrap.min.js"></script>
		<link href="${jypath}/pc/css/date/bootstrap-datetimepicker.min.css" rel="stylesheet" media="screen">
		<script type="text/javascript" src="${jypath}/pc/js/date/bootstrap-datetimepicker.min.js" charset="UTF-8"></script><!-- 新增 日期选择-->
		<script type="text/javascript" src="${jypath}/pc/js/date/bootstrap-datetimepicker.zh-CN.js" charset="UTF-8"></script><!-- 新增  语言-->
		<style>
		    .picBox{width: 100px;height: 160px;padding-top:25px;}
		    .picBox img{max-width:100%;max-height: 100%;width: auto;height:auto;}
		    .picBox div{border:1px dotted #ccc;width: 100%;height: 100%;}
		    .upPic{display: none !important;}
		    .warnWord{color:red;display: none;}
		    
		</style>
		<!-- 局部刷新 js -->
		<script src="${jypath}/pc/js/oa/refresh.js"></script>
		<script src="${jypath}/pc/js/oa/partrefresh.js"></script>
		<script src="${jypath}/pc/js/oa/pageturning.js"></script>
	</head>
	<body>
		<!-- padding盒子 start-->
    	<div>
        <div style="width:70%; margin: 0 auto;">
           <form class="add-form" id="editform" >
           <input type="hidden" name="resumeId" value="${resume.resumeId }">
           <div class="form-group col-md-12">
               <c:if test="${operation == 'update'}">
               <input class="btn btn-success pull-left" type="button" onclick="edit();" value="保存">
               </c:if>
               <input class="btn btn-default pull-left" type="button" onclick="cancel();" value="取消">
           </div>
               <div class="form-group">
                   <h4><b>基本信息：</b></h4>
               </div>
               <table class='table'>
                   <tr>
                       <td class="col-md-6">
                           <div class="form-group col-md-12">
                               <label >姓名:</label>
                               <input type="text" class="form-control" name="fullname" value="${resume.fullname }" maxlength="20">
                           </div>
                       </td>
                       <td rowspan="3">
                           <div class="picBox center-block">
                               <input type="file" id="fileAttach" name="fileAttach" class="upPic" required>
                               <%--<input type="hidden" id="fileAttachType" name="fileAttachType" value="empfile">
                               <input type="text" name="photo" value="">
                               --%><div>
                                   <img src="" alt="">
                                   <p class="warnWord text-center"></p>
                               </div>
                               <button type="button" class="btn btn-success" id="upBtn" style="margin-top:10px;position:relative;">
                                   <i class="glyphicon glyphicon-upload"></i>&nbsp;上传照片
                               </button>
                           </div>
                       </td>
                   </tr>
                   <tr>
                       <td class="col-md-6">
                           <div class="form-group col-md-12">
                               <label >年龄:</label>
                               <input type="text" class="form-control" name="age" value="${resume.age }" maxlength="20">
                           </div>
                       </td>
                   </tr>
                   <tr>
                       <td class="col-md-6">
                           <div class="form-group col-md-12">
                               <label >性别:</label>
                               <select class="form-control" name="sex">
                               	   <c:if test="${resume.sex == 0 }">
	                                   <option value="">--请选择--</option>
	                                   <option value="0" selected>男</option>
	                                   <option value="1">女</option>
                                   </c:if>
                                   <c:if test="${resume.sex == 1 }">
	                                   <option value="">--请选择--</option>
	                                   <option value="0">男</option>
	                                   <option value="1" selected>女</option>
                                   </c:if>
                               </select>
                           </div>
                       </td>
                   </tr>
                   <tr>
                       <td class="col-md-6">
                           <div class="form-group col-md-12">
                               <label >生日:</label>
                               <div class="input-group date form_date col-md-12" data-date="" data-date-format="yyyy-MM-dd" data-link-field="dtp_input" data-link-format="yyyy-mm-dd">
                                   <input class="form-control" size="16" name="birthday" type="text" value="${resume.birthday1 }" readonly>
                                   <span class="input-group-addon"><span class="glyphicon glyphicon-remove"></span></span>
                                   <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                               </div>
                           </div>
                       </td>
                   </tr>
                   <tr>
                       <td class="col-md-6">
                           <div class="form-group col-md-12">
                               <label >籍贯:</label>
                               <input type="text" class="form-control" name="birthPlace" value="${resume.birthPlace }" maxlength="20">
                           </div>
                       </td>
                       <td class="col-md-6">
                           <div class="form-group col-md-12">
                               <label >参加工作时间:</label>
                               <div class="input-group date form_date col-md-12" data-date="" data-date-format="yyyy-MM-dd" data-link-field="dtp_input" data-link-format="yyyy-mm-dd">
                                   <input class="form-control" size="16" name="startWorkDate" type="text" value="${resume.startWorkDate1 }" readonly>
                                   <span class="input-group-addon"><span class="glyphicon glyphicon-remove"></span></span>
                                   <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                               </div>
                           </div>
                       </td>
                   </tr>
                   <tr>
                       <td class="col-md-6">
                           <div class="form-group col-md-12">
                               <label>身份证:</label>
                               <input type="text" class="form-control" name="idNo" value="${resume.idNo }" maxlength="20">
                           </div>
                       </td>
                       <td class="col-md-6">
                           <div class="form-group col-md-12">
                               <label>宗教信仰:</label>
                               <input type="text" class="form-control" name="religion" value="${resume.religion }" maxlength="20">
                           </div>
                       </td>
                   </tr>
                   <tr>
                       <td class="col-md-6">
                           <div class="form-group col-md-12">
                               <label>政治面貌:</label>
                               <input type="text" class="form-control" name="party" value="${resume.party }" maxlength="20">
                           </div>
                       </td>
                       <td class="col-md-6">
                           <div class="form-group col-md-12">
                               <label>国籍:</label>
                               <input type="text" class="form-control" name="nationality" value="${resume.nationality }" maxlength="20">
                           </div>
                       </td>
                   </tr>
                   <tr>
                       <td class="col-md-6">
                           <div class="form-group col-md-12">
                               <label>民族:</label>
                               <input type="text" class="form-control" name="race" value="${resume.race }" maxlength="20">
                           </div>
                       </td>
                       <td class="col-md-6">
                           <div class="form-group col-md-12">
                               <label>职位名称:</label>
                               <input type="text" class="form-control" name="position" value="${resume.position }" maxlength="20">
                           </div>
                       </td>
                   </tr>
               </table>
               <div class="form-group">
                   <h4><b>联系方式：</b></h4>
               </div>
               <div class="form-group col-md-12">
                   <label >地址</label>
                   <input type="text" class="form-control" name="address" value="${resume.address }" maxlength="20">
               </div>
               <div class="form-group col-md-6" class="tiPsh">
                   <label >邮编：</label>
                   <input type="text" class="form-control" name="zip" value="${resume.zip }" maxlength="20">
               </div>
               <div class="form-group col-md-6">
                   <label >电话号码:</label>
                   <input type="text" class="form-control" name="phone" value="${resume.phone }" maxlength="20">
               </div>
               <div class="form-group col-md-6">
                   <label >电子邮箱:</label>
                   <input type="text" class="form-control" name="email" value="${resume.email }" maxlength="20">
               </div>
               <div class="form-group col-md-6">
                   <label >手机号码:</label>
                   <input type="text" class="form-control" name="mobile" value="${resume.mobile }" maxlength="20">
               </div>
               <div class="form-group">
                   <h4><b>教育背景：</b></h4>
               </div>
               <div class="form-group col-md-12">
                   <label >毕业院校:</label>
                   <input type="text" class="form-control" name="eduCollege" value="${resume.eduCollege }" maxlength="20">
               </div>
               <div class="form-group col-md-6">
                   <label >学历:</label>
                   <input type="text" class="form-control" name="eduDegree" value="${resume.eduDegree }" maxlength="20">
               </div>
               <div class="form-group col-md-6">
                   <label >专业:</label>
                   <input type="text" class="form-control" name="eduMajor" value="${resume.eduMajor }" maxlength="20">
               </div>
               <div class="form-group">
                   <label>工作经历：</label>
               </div>
               <div class="form-group col-md-12">
                   <textarea class="form-control" rows="3" name="workCase" maxlength="1500">${resume.workCase }</textarea>
               </div>
               <div class="form-group">
                   <h4><b>项目经验：</b></h4>
               </div>
               <div class="form-group col-md-12">
                   <textarea class="form-control" rows="3" name="projectCase" maxlength="1500">${resume.projectCase }</textarea>
               </div>
               <div class="form-group">
                   <h4><b>培训经历：</b></h4>
               </div>
               <div class="form-group col-md-12">
                   <textarea class="form-control" rows="3" name="trainCase" maxlength="1500">${resume.trainCase }</textarea>
               </div>
               <div class="form-group">
                   <h4><b>个人爱好：</b></h4>
               </div>
               <div class="form-group col-md-12">
                   <textarea class="form-control" rows="3" name="hobby" maxlength="1500">${resume.hobby }</textarea>
               </div>
               <div class="form-group">
                   <h4><b>备注：</b></h4>
               </div>
               <div class="form-group col-md-12">
                   <textarea class="form-control" rows="3" name="memo" maxlength="1500">${resume.memo }</textarea>
               </div>
           </form>
       </div>
   </div>
   <!-- 添加弹窗 end -->
</body>
<script type="text/javascript">
	function edit() {
		var data = $("#editform").serialize();
		var url = jypath+"/oa/resume/edit";
		$.ajax({
			type: "post",
			url : url,
			data: data,
			success:function(data) {
				fuShowSuccess();
				window.location.href=jypath+"/oa/resume/list";
			}
		});
	}
	$(function() {
   		fuLoading();
   	    $('#upBtn').off('click').on('click',function(event) {
   	       $('.upPic').click();
   	    });
   	    //日期选择设置
   	    $('.form_date').datetimepicker({
   	        language: 'zh-CN',
   	        weekStart: 1,
   	        todayBtn: 1,
   	        autoclose: 1,
   	        todayHighlight: 1,
   	        startView: 2,
   	        minView: 2,
   	        forceParse: 0,
   	    });

   		//图片上传开始
   	    $('.upPic').on('change', function() {
   	        var that = $(this);
   	        var aSpan = $('.warnWord');
   	        judgeTypeSize(aSpan,that, 1,img_upload);
   	        
   	        //图片开始上传
   	        uploadImage();
   	    });
   	    function judgeTypeSize(wWarn,fileObj, maxSize,callback){
   	        var value = fileObj.val();
   	        if (!value.match(/.jpg|.jpeg|png/i)){
   	            wWarn.show();
   	            wWarn.html('图片格式不正确！');
   	            fileObj.val('');
   	        }else {
   	            var size = fileObj[0].files[0].size;
   	            var trueSize = Math.ceil(size/1024/1024);
   	            if(trueSize > maxSize){
   	                wWarn.show();
   	                wWarn.html("照片尺寸过大，请重新选择!");
   	                 fileObj.val('');
   	            }else{
   	                wWarn.hide();
   	                if(callback){
   	                    callback(fileObj[0]);
   	                }
   	            }
   	        }
   	    }
   	    function getImgUrl(fileObj){
   	        var url;
   	        if(fileObj.files&&fileObj.files[0]){//火狐下
   	            url=window.URL.createObjectURL(fileObj.files[0]);
   	        }else{////IE下
   	            fileObj.select();
   	            url= fileObj.selection.createRange().text;
   	            document.selection.empty();
   	        }
   	        return url;
   	    }
   	    function img_upload(fileObj){
   	        var url = getImgUrl(fileObj);
   	        var imgBox = $('.picBox');
   	        var img = imgBox.find("img");
   	        img.attr("src",url);
   	    }
   	    //图片上传结束
   	    fuCloseLayer();
   	});
</script>
</html>